pipeline {
      agent any
       tools {
         maven 'maven'
         
         }
     stages {
        stage("Git checkout"){
           steps{
              git branch: 'main', credentialsId:'e44652ce-bc38-4e73-861a-f9dc731c2a27', url: 'https://github.com/Yogesh238/new.git'
              }
        }
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
        stage("Package"){
           steps{
              sh "mvn package"
              }
              }
        stage("Install"){
           steps{
              sh "mvn install"
              }  
              }
        stage("Create jar File"){
           steps{
              sh 'java -jar target/my-app-1.0-SNAPSHOT.jar'
              } 
              }
         stage("Create War File"){
           steps{
              sh 'jar -cf target/my-app-1.0-SNAPSHOT.jar target/my-app-1.0-SNAPSHOT.war'
              } 
              }  
         stage("Deploy War File"){
           steps{
              sh "cp target/my-app-1.0-SNAPSHOT.war /home/ec2-user/apache-tomcat-8.5.61/webapps/"
              }   
          }
    }
}
